{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "My Remote Job",
        "description": "This is the web API that provides data for customers and manages My Remote Jobs business rules.\n My remote job is an application that collects, groups and shows open opportunities for remote jobs from various web sites.",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "/api/",
            "description": "Local Dev"
        }
    ],
    "tags": [
        {
            "name": "Jobs",
            "description": "API for jobs in the system"
        }
    ],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/jobs": {
            "get": {
                "tags": ["Jobs"],
                "summary": "Get all active jobs in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Jobs"
                        }
                    }
                }
            }
        },
        "/jobs/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the job that we want to match",
                    "type": "string"
                }
            ],
            "get": {
                "tags": ["Jobs"],
                "summary": "Get job with given ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Job with id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Job"
                        }
                    },
                    "404": {
                        "description": "Failed. Job not found."
                    }
                }
            }
        },
        "/jobs/{source}": {
            "parameters": [
                {
                    "name": "source",
                    "in": "path",
                    "required": true,
                    "description": "Source that we want to fetch jobs from",
                    "type": "string"
                }
            ],
            "get": {
                "tags": ["Jobs"],
                "summary": "Get active jobs from the given source",
                "parameters": [
                    {
                        "in": "path",
                        "name": "source",
                        "required": true,
                        "description": "Jobs from source",
                        "schema": {
                            "$ref": "#/definitions/source"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Jobs"
                        }
                    },
                    "404": {
                        "description": "Failed. Jobs not found."
                    }
                }
            }
        }
    },
    "definitions": {
        "source": {
            "properties": {
                "string": {
                    "type": "string"
                }
            }
        },
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "Job": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                },
                "company": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                },
                "employmenttype": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "companyDetails": {
                    "type": "string"
                },
                "salaryRange": {
                    "type": "string"
                },
                "skills": {
                    "type": "string"
                }
            }
        },
        "Jobs": {
            "type": "object",
            "properties": {
                "jobs": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/Job"
                    }
                }
            }
        }
    }

}
